<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="fabricStructurePO"
            type="com.software.erp.view.knitting.FabricStructurePO" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color"
        android:orientation="vertical">

        <com.software.erp.view.knitting.KnittingFabricStructureView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:fabricStructurePO="@{fabricStructurePO}" />

        <View
            style="@style/divider_line_style"
            android:layout_marginStart="@dimen/side_margin"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/side_margin" />
    </LinearLayout>
</layout>